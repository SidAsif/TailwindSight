{
  "manifest_version": 3,
  "name": "TailwindSight",
  "version": "1.0.0",
  "description": "Instantly inspect, view, and modify Tailwind CSS classes on any webpage with live suggestions and undo/redo support.",
  "author": "Md Asif Siddiqui",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TailwindSight - CSS Class Inspector",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tailwind-classes.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
